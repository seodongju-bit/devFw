<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
   <mapper namespace="A.A_P003">
	<resultMap id="A_P003Result01" type="A_P003VO">
		<result property="mem_no" column="mem_no" />
		<result property="mem_id" column="mem_id" />
		<result property="mem_pw" column="mem_pw" />
		<result property="mem_nick" column="mem_nick" />
		<result property="mem_name" column="mem_name" />
		<result property="mem_email1" column="mem_email1" />
		<result property="mem_email2" column="mem_email2" />
		<result property="mem_tel" column="mem_tel" />
		<result property="mem_zip" column="mem_zip" />
		<result property="mem_address1" column="mem_address1" />
		<result property="mem_address2" column="mem_address2" />	
		<result property="mem_tel" column="mem_tel" />
		
	</resultMap>	

	
	<update id="updateMyInfo" parameterType="java.util.HashMap">
	   update members
			   <set>
			      <if test=" mem_pw!='' and mem_pw!=null">
			        mem_pw=#{mem_pw},
			      </if>
			      <if test=" mem_tel!='' and mem_tel!=null">
			         mem_tel=#{mem_tel},
			      </if>
			      <if test=" mem_zip!='' and mem_zip!=!=null">
			         mem_zip!==#{mem_zip!=},
			      </if>			     
			      <if test=" mem_address1!='' and mem_address1!=null">
			         mem_address1=#{mem_address1},
			      </if>
			      <if test=" mem_address2!='' and mem_address2!=null">
			         mem_address2=#{mem_address2}
			      </if>
			   </set>
		where 
		mem_id=#{mem_id}
	</update>
  	
  	<select id="selectMyDetailInfo" resultType="A_P003VO"   parameterType="String"  >
	    <![CDATA[
			select * from members
			where mem_id=#{mem_id}
    	]]>
	</select>	
  
</mapper>